@model CreateBookDTO

@{
	ViewBag.Title = "Create Book";
}

<form asp-area="Admin" asp-controller="Book" asp-action="Create" method="post" enctype="multipart/form-data">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>

    <div>
        <label asp-for="Author"></label>
        <input asp-for="Author" />
        <span asp-validation-for="Author"></span>
    </div>

    <div>
        <label asp-for="Summary"></label>
        <textarea asp-for="Summary"></textarea>
        <span asp-validation-for="Summary"></span>
    </div>

    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" />
        <span asp-validation-for="Price"></span>
    </div>

    <div>
        <label asp-for="Stock"></label>
        <input asp-for="Stock" />
        <span asp-validation-for="Stock"></span>
    </div>

    <div>
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" asp-items="@ViewBag.Categories"></select>
        <span asp-validation-for="CategoryId"></span>
    </div>

    <div>
        <label asp-for="ImageFile">Upload Image</label>
        <input asp-for="ImageFile" type="file" />
    </div>

    <div asp-validation-summary="All"></div>

    <button type="submit">Create Book</button>
</form>
