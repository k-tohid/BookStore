@model IEnumerable<ReadBookDTO>

@{
	ViewBag.Title = "List Books";
}

<a asp-area="Admin" asp-controller="Book" asp-action="Create">Create a new book</a>


<table class="table">
	<thead>
		<tr>
			<th scope="col">Image</th>
			<th scope="col">Title</th>
			<th scope="col">Author</th>
			<th scope="col">Price</th>
			<th scope="col">Edit or remove</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var book in Model)
		{
			<tr scope="row">
				<td><img src="/images/books/@book.ImageUrl" /></td>
				<td>@book.Title</td>
				<td>@book.Author</td>
				<td>@book.Price</td>
				<td>
					<a asp-area="Admin" asp-controller="Book" asp-action="Update" asp-route-id="@book.Id">Edit</a>
					<a asp-area="Admin" asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>