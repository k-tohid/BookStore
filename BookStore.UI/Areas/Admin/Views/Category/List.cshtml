@model IEnumerable<ReadCategoryDTO>

@{
	ViewBag.Title = "List All Categories";
}


<a asp-area="Admin" asp-controller="Category" asp-action="Create" >Create a new category</a>


<table>
	<thead>
		<tr>
			<th>Category Name</th>
			<th>Category Description</th>
			<th>Edit or remove</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var category in Model)
		{
			<tr>
				<td>@category.Name</td>
				<td>@category.Description</td>
				<td>
					<a asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id">Edit</a>
					<a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>